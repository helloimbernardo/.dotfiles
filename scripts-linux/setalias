# ALIASES
# helloimbernardo

alias piplup="pokemon-colorscripts -n piplup --no-title"
alias winex="explorer.exe ."
alias explorer="nautilus"
alias neofetch="fastfetch"
alias lal="ls -al"
alias fetch="echo "" && fastfetch --logo ~/.hidden-files/faces.jpg --logo-width 50 --logo-padding 1"

alias hasan="nohup streamlink -p mpv --player-args '--profile=streamlink-pip' --twitch-low-latency 'twitch.tv/hasanabi' 'best' </dev/null &>/dev/null &"
function pip-video() {nohup mpv --profile=streamlink-pip $1 </dev/null &>/dev/null &}

alias dfiles="cd ~/.dotfiles"
alias win="cd /mnt/c/Users/jb"
alias discord-update="~/.local/bin/discord-linux-install/install.sh"


# VIM / NEOVIM
alias vi="nvim"
alias vim="nvim"
alias view="nvim -R"
alias vimdiff="nvim -d"
alias vimconf="vim ~/.config/nvim/init.lua"
